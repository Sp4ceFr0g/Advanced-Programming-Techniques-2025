<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School Manager" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Copy" Executed="CopyExecuted" CanExecute="CanCopyExecuted" />
        <CommandBinding Command="ApplicationCommands.Paste" Executed="PasteExecuted" CanExecute="CanPasteExecuted" />
    </Window.CommandBindings>
    <Grid>
        <TabControl>
            <TabItem Header="Students">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="First Name:" Margin="5" />
                            <TextBox x:Name="FirstNameTextBox" Margin="5" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Last Name:" Margin="5" />
                            <TextBox x:Name="LastNameTextBox" Margin="5" />
                        </StackPanel>
                        <Button x:Name="AddStudentButton" Content="Add" Grid.Column="2" Click="AddStudent_Click" Margin="5" VerticalAlignment="Bottom" />
                    </Grid>
                    <ListView x:Name="StudentsList" Grid.Row="1" Margin="5" SelectionMode="Single">
                        <ListView.InputBindings>
                            <KeyBinding Command="ApplicationCommands.Copy" Gesture="Ctrl+C" />
                        </ListView.InputBindings>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Student" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding FullName}" Margin="0,0,5,0" />
                                                <Button Content="Remove" Click="RemoveStudent_Click" Tag="{Binding}" HorizontalAlignment="Right" Width="60" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Teachers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Content="First Name:" Margin="5" />
                            <TextBox x:Name="TeacherFirstNameTextBox" Margin="5" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Last Name:" Margin="5" />
                            <TextBox x:Name="TeacherLastNameTextBox" Margin="5" />
                        </StackPanel>
                        <Button x:Name="AddTeacherButton" Content="Add" Grid.Column="2" Click="AddTeacher_Click" Margin="5" VerticalAlignment="Bottom" />
                    </Grid>
                    <ListView x:Name="TeachersList" Grid.Row="1" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Teacher" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding FullName}" Margin="0,0,5,0" />
                                                <Button Content="Remove" Click="RemoveTeacher_Click" Tag="{Binding}" HorizontalAlignment="Right" Width="60" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Courses">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="CoursesList" Grid.Column="0" SelectionChanged="CoursesList_SelectionChanged">
                        <ListView.InputBindings>
                            <KeyBinding Command="ApplicationCommands.Paste" Gesture="Ctrl+V" />
                        </ListView.InputBindings>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                                <GridViewColumn Header="Teacher" DisplayMemberBinding="{Binding Teacher.FirstName}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Grid.Column="1" Margin="5">
                        <Button x:Name="AddCourseButton" Content="Add" Click="AddCourse_Click" Margin="0,0,0,5" />
                        <Button x:Name="RemoveCourseButton" Content="Remove" Click="RemoveCourse_Click" Margin="0,0,0,5" IsEnabled="False" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>