<Window x:Class="Lab4.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Course" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <Label Content="Course Name:" />
            <TextBox x:Name="CourseNameTextBox" Margin="0,0,0,5" />
            <Label Content="Select Teacher:" />
            <ComboBox x:Name="TeacherComboBox" DisplayMemberPath="FullName" Margin="0,0,0,5" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListBox x:Name="AvailableStudentsListBox" Grid.Column="0" Margin="5" SelectionMode="Multiple" />
            <ListBox x:Name="AttendanceListBox" Grid.Column="1" Margin="5" />
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Add Selected" Click="AddSelected_Click" Margin="0,0,5,0" />
            <Button Content="OK" Click="OK_Click" Margin="0,0,5,0" />
            <Button Content="Cancel" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>