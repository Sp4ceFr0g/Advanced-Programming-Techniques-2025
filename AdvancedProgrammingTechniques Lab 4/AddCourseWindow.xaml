<Window x:Class="Lab4.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Course" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <Label Content="Course Name:" />
            <TextBox x:Name="CourseNameText" Margin="0,0,0,5" />
        </StackPanel>
        <ComboBox x:Name="TeacherCombo" Grid.Row="1" Margin="5" DisplayMemberPath="Name" SelectedIndex="0" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListView x:Name="AvailableStudentsList" Grid.Column="0" MouseDoubleClick="MoveToSelected_Click">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Available Students" DisplayMemberBinding="{Binding FirstName}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView x:Name="SelectedStudentsList" Grid.Column="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Selected Students" DisplayMemberBinding="{Binding FirstName}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button x:Name="AddButton" Grid.Row="3" Content="Add" Click="Add_Click" Margin="5" HorizontalAlignment="Right" />
    </Grid>
</Window>